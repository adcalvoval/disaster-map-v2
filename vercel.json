{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "IFRC_GO_API_TOKEN": "@ifrc-go-api-token",
    "IFRC_GO_API_BASE_URL": "https://goadmin.ifrc.org/api/v2"
  }
}